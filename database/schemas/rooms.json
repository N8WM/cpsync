{
  "$schema": "http://json-schema.org/draft-04/schema",
  "bsonType": "object",
  "title": "Room Object Validation",
  "additionalProperties": false,
  "required": [
    "_id",
    "term_id",
    "building_id",
    "number",
    "sections",
    "schedule_path",
    "registered_location_capacity",
    "url"
  ],
  "properties": {
    "_id": {
      "bsonType": "string",
      "description": "the unique identifier for the room object"
    },
    "term_id": {
      "bsonType": "string",
      "description": "the term id associated with the room"
    },
    "building_id": {
      "bsonType": "string",
      "description": "the building id of the building the room is in"
    },
    "number": {
      "bsonType": "string",
      "description": "the room number (ex. '014-255', '002-0101', '038-0121')"
    },
    "sections": {
      "bsonType": "array",
      "description": "an array of section ids for sections held in the room",
      "items": {
        "bsonType": "string",
        "description": "the section id"
      }
    },
    "schedule_path": {
      "bsonType": "string",
      "description": "the path to the room's schedule page (useful for end users)"
    },
    "registered_location_capacity": {
      "bsonType": "int",
      "description": "the room's registered location capacity (ex. 30, 50, 100, 200)"
    },
    "url": {
      "bsonType": "string",
      "description": "the url to the room's page (useful for end users)"
    }
  }
}
